{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7"],
    "jsx": "react",
    "sourceMap": false,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": false,
    "pretty": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["prop-types", "react", "react-native"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__",
    "dist",
    ".jest",
    "node_modules",
    "coverage",
    "example",
    "./jest.config.js"
  ]
}
